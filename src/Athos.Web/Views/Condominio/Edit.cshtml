@model Athos.Web.ViewModels.CondominioViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Editar dados do usuário:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AdministradoraId" class="control-label"></label>
                <select asp-for="AdministradoraId" class="form-control" asp-items="@(new SelectList(Model.Administradoras, "Id", "Nome",Model.AdministradoraId))">
                    <option>Selecione...</option>
                </select>

                <span asp-validation-for="AdministradoraId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar página anterior</a>
</div>

